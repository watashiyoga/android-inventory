<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="match_parent">
            <TableLayout android:id="@+id/tableLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="match_parent" android:layout_gravity="center" android:gravity="center" android:layout_margin="8sp" android:textSize="40sp" android:text="@string/app_name"></TextView>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView1" android:src="@drawable/scanicon128"></ImageView>
                <Button android:id="@+id/ScanButton" android:text="@string/scanBarcode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8sp" android:layout_marginRight="8sp" android:layout_marginTop="20sp" android:layout_marginBottom="8sp"></Button>
                <Button android:layout_height="wrap_content" android:text="@string/listproductlabel" android:layout_width="wrap_content" android:layout_margin="8sp" android:id="@+id/listProductBtn"></Button>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
