<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_gravity="center" android:text="@string/productTypeLabel" android:layout_margin="2sp"></TextView>
        <Spinner android:layout_width="match_parent" android:layout_gravity="center" android:layout_margin="5sp" android:layout_height="40sp" android:id="@+id/lpTypeSpinner"></Spinner>
    </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/lpListViewProducts"></ListView>
</LinearLayout>
